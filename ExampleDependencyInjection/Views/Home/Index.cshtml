@model List<Student>
@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center" style="margin-top:40px;">
    <h2 class="display-4">
        Dependency Injection Lifetime
    </h2>
</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Service Type</th>
            <th>First Instance Operation ID</th>
            <th>Second Instance Operation ID</th>
            <th>Third Instance Operation ID</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td style="background-color: darksalmon">
                Transient
            </td>
            <td style="background-color: darksalmon">
                @ViewBag.transient1
            </td>
            <td style="background-color: darksalmon">
                @ViewBag.transient2
            </td>
            <td style="background-color: darksalmon">
                @ViewBag.transient3
            </td>
        </tr>
        <tr>
            <td>Scoped</td>
            <td>@ViewBag.scopped1</td>
            <td>@ViewBag.scopped2</td>
            <td>@ViewBag.scopped3</td>
        </tr>
        <tr>
            <td style="background-color: aquamarine">
                Singleton
            </td>
            <td style="background-color: aquamarine">
                @ViewBag.singleton1
            </td>
            <td style="background-color: aquamarine">
                @ViewBag.singleton2
            </td>
            <td style="background-color: aquamarine">
                @ViewBag.singleton3
            </td>
        </tr>
</tbody>
</table>


   
